<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CompanyEditProfilePage">


    <ScrollView
        android:id="@+id/scrollView4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/scrollView4">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="@drawable/head_img"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/head"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="0dp"
                    android:fontFamily="casual"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:text="COMPANY PROFILE"
                    android:textColor="@color/white"
                    android:textSize="32dp" />

                <ProgressBar
                    android:id="@+id/progressBar5"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="invisible" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/edit_profile"
                    android:layout_width="37dp"
                    android:layout_height="36dp"
                    android:layout_marginLeft="60dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="80dp"
                    android:background="@drawable/ic_baseline_edit_pencil" />

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:layout_width="190dp"
                    android:layout_height="157dp"
                    android:layout_gravity="center"
                    android:src="@drawable/company_profile_img"
                    app:civ_border_color="@color/black"
                    app:civ_border_width="1dp"
                    app:civ_shadow="true"
                    app:civ_shadow_color="@color/black" />
                <TextView
                    android:id="@+id/Ques1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:text="COMPANY NAME"
                    android:paddingLeft="10dp"
                    android:textColor="@color/black"
                    android:textSize="22dp" />
                <TextView
                    android:id="@+id/cname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:text="company name"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textSize="22dp"
                    android:background="@drawable/layout_bg"/>

                <TextView
                    android:id="@+id/Ques2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:text="COMPANY EMAILID"
                    android:paddingLeft="10dp"
                    android:textColor="@color/black"
                    android:textSize="22dp" />
                <TextView
                    android:id="@+id/cemail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:text="company emailid"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textSize="22dp"
                    android:background="@drawable/layout_bg"/>


                <TextView
                    android:id="@+id/Ques3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:text="COMPANY LOCATION"
                    android:paddingLeft="10dp"
                    android:textColor="@color/black"
                    android:textSize="22dp" />
                <TextView
                    android:id="@+id/location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:text="clocation"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textSize="22dp"
                    android:background="@drawable/layout_bg"/>

                <TextView
                    android:id="@+id/Ques4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:text="REPRESENTATIVE NAME"
                    android:paddingLeft="10dp"
                    android:textColor="@color/black"
                    android:textSize="22dp" />
                <TextView
                    android:id="@+id/repre_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:text="representative name"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textSize="22dp"
                    android:background="@drawable/layout_bg"/>

                <TextView
                    android:id="@+id/Ques5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:text="REPRESENTATIVE EMAILID"
                    android:paddingLeft="10dp"
                    android:textColor="@color/black"
                    android:textSize="22dp" />
                <TextView
                    android:id="@+id/repre_emailid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:text="representative emailid"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textSize="22dp"
                    android:background="@drawable/layout_bg"/>

                <TextView
                    android:id="@+id/Ques6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:text="REPRESENTATIVE CONTACT NUMBER"
                    android:paddingLeft="10dp"
                    android:textColor="@color/black"
                    android:textSize="22dp" />
                <TextView
                    android:id="@+id/repre_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="50dp"
                    android:text="representative number"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textSize="22dp"
                    android:background="@drawable/layout_bg"/>



            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>