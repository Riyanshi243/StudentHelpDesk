<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterCollege">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="122dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:background="@drawable/head_img"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/head"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="50dp"
                    android:fontFamily="casual"
                    android:gravity="center"
                    android:paddingLeft="5dp"

                    android:text="COLLEGE REGISTER"
                    android:textColor="@color/white"
                    android:textSize="32dp" />

                <ProgressBar
                    android:id="@+id/progressBar_college"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="invisible" />
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <EditText
                android:id="@+id/cname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:ems="10"
                android:hint="Enter College Name"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:paddingLeft="5dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/black"
                android:textColorHint="@android:color/darker_gray"
                android:textColorLink="@color/black" />

            <EditText
                android:id="@+id/uname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:hint="Define unique College UserName"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:paddingLeft="5dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/black"
                android:textColorHint="@android:color/darker_gray"
                android:textColorLink="@color/black" />



            <EditText
                android:id="@+id/clocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:hint="Enter College Location"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:paddingLeft="5dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/black"
                android:textColorHint="@android:color/darker_gray"
                android:textColorLink="@color/black" />

            <EditText
                android:id="@+id/adminemail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:hint="Enter Super Admin emailID"
                android:inputType="textEmailAddress"
                android:minHeight="48dp"
                android:paddingLeft="5dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/black"
                android:textColorHint="@android:color/darker_gray"
                android:textColorLink="@color/black"
                tools:ignore="SpeakableTextPresentCheck" />


            <EditText
                android:id="@+id/password2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:hint="Enter Password"
                android:inputType="textPassword"
                android:minHeight="48dp"
                android:paddingLeft="5dp"
                android:selectAllOnFocus="false"
                android:singleLine="false"
                android:textColor="@color/black"
                android:textColorHighlight="@color/black"
                android:textColorHint="@android:color/darker_gray"
                android:textColorLink="@color/black"
                tools:ignore="SpeakableTextPresentCheck" />

            <EditText
                android:id="@+id/confirmpassword2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:minHeight="48dp"
                android:paddingLeft="5dp"
                android:selectAllOnFocus="false"
                android:singleLine="false"
                android:textColor="@color/black"
                android:textColorHighlight="@color/black"
                android:textColorHint="@android:color/darker_gray"
                android:textColorLink="@color/black"
                tools:ignore="SpeakableTextPresentCheck" />

            <Button
                android:id="@+id/register"
                android:layout_width="157dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:background="@drawable/roundedbutton"
                android:onClick="next"
                android:text="REGISTER" />

            <TextView
                android:id="@+id/login"
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"

                android:onClick="toLogin"
                android:text="@string/already_a_user_nlogin_instead"
                android:textAlignment="center"
                android:textColor="@color/blue_text"
                android:textStyle="italic"
                android:layout_marginBottom="60dp" />
        </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>